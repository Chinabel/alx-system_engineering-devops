#!/usr/bin/env bash
# Configure your domain zone so that the subdomain www points to your...
# ...load-balancer IP (lb-01). and write a Bash script that will display...
# ...information about subdomains


domain=$1

if [ "$#" -eq 2 ]; then
    subdomain=$2
else
    subdomain=("www" "lb-01" "web-01" "web-02")
fi

for sub in "${subdomain[@]}"; do
    echo -n "The subdomain $sub"
    dig "$sub.$domain" | grep -A1 'ANSWER SECTION:' | tail -n -1 | awk '{ print " is a " $4 " record and points to " $5}'
done
